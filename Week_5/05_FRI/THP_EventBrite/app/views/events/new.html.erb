<%= form_for @event do |f| %>
  <div class="form-group">
    <%= f.text_area :desc, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_field :place, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.date_field :date, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.collection_select(:creator_id, User.all, :id, :name) %>
  </div>
  <div class="form-group">
    <%= f.submit 'new', class:'btn btn-default' %>
  </div>
<% end %>

<%= button_to 'back', events_path, method: :get, class:'btn btn-default' %>
